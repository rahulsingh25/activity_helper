<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.activities.any? %>
      <h3>Activities (<%= @user.activities.count %>)</h3>
      <%= will_paginate @activities %>
      <ol class="activities">
        <%= render partial:'activities/activity', locals: { activities: @activities } %>
      </ol>
      <%= will_paginate @activities %>
    <% end %>
  </div>
</div>
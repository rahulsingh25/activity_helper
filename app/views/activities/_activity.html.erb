<div class="activity-feed">
<li>
  <%= link_to gravatar_for(activity.user), activity.user %>
  <span class="user">
    <%= link_to activity.user.name, activity.user %>
  </span>
  <span class="content">Activity <%= activity.name %> of <%= activity.category %></span>
  <span class="content"><%= activity.description %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(activity.created_at) %> ago.
  </span>
</li>
</div>

